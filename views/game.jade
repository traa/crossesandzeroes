
extends layout



block content
	script(src="/socket.io/socket.io.js")
	script(src="/javascripts/g.js", type="text/javascript")
	input(type="hidden", id="game_id", value="#{game_id}")
	input(type="hidden", id="fieldsize", value="#{fieldsize}")
	img(src="/images/cross.png", id="cross", style="display:none;")
	img(src="/images/zero.png", id="zero", style="display:none;")

	h2#player_number 
	h1 Game with field size #{fieldsize}x#{fieldsize}
	table#field
		- iteration = 1;
		- for (var x = 1; x <= fieldsize; x++)
			tr
				- for (var y = 1; y <= fieldsize; y++)
					td(id="#{iteration}")
					- iteration++;


	div#turninfo Please wait for your turn


	input#finish_game(type="button", value="Finish the game")



